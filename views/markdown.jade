extends layout

block content
  #messageZone(class="alert alert-warning alert-dismissible", role="alert")
    button(type="button", class="close", data-dismiss="alert")
      span(aria-hidden="true") &times;
      span(class="sr-only") Close
  #uploadZone(class="container-fluid markdown-body")
    .row
      div(class="col-lg-3 col-md-3 col-sm-4 col-xs-5")
        ul.mdList
          each mdFile in mdFiles
            if fileName == mdFile
              li.itemHighlight
                a(href='/markdown/#{mdFile}')= mdFile
            else 
              li
                a(href='/markdown/#{mdFile}')= mdFile
      div(class="col-lg-9 col-md-9 col-sm-8 col-xs-7 mdContent")
        button#shrinkButton(type="button" class="btn btn-default")
          span(class="iconfont") &#xf016e
        div#settingBg(class="btn-group")
          button(type="button", class="btn btn-default iconfont") &#xf0205 
          button(type="button", class="btn btn-default iconfont") &#xf01e4
        != mdContent
  script(src="/javascripts/upload.js")
