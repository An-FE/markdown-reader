extends layout

block content
  #messageZone(class="noprint")
  #uploadZone(class="container-fluid markdown-body")
    .row
      div(class="noprint col-lg-3 col-md-3 col-sm-4 col-xs-5")
        ul.mdList
          each mdFile in mdFiles
            if fileName == mdFile
              li.itemHighlight
                a(href='/markdown/#{mdFile}')= mdFile
            else 
              li
                a(href='/markdown/#{mdFile}')= mdFile
      div(class="col-lg-9 col-md-9 col-sm-8 col-xs-7 mdContent")
        button#shrinkButton(type="button" class="btn btn-default noprint")
          span(class="iconfont") &#xf016e
        div#settingBg(class="btn-group noprint")
          button(type="button", class="btn btn-default iconfont") &#xf0205 
          button(type="button", class="btn btn-default iconfont") &#xf01e4
        div#operation(class="btn-group noprint")
          button(type="button", class="btn btn-default iconfont") &#xf00a8
          button(type="button", class="btn btn-default iconfont") 
            a(href='/download/#{fileName}', download='#{fileName}') &#xf0163
        != mdContent
  script(src="/javascripts/upload.js")
